<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_gold_purity_tree" model="ir.ui.view">
        <field name="name">gold.purity.tree</field>
        <field name="model">gold.purity</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="percentage"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_gold_purity_form" model="ir.ui.view">
        <field name="name">gold.purity.form</field>
        <field name="model">gold.purity</field>
        <field name="arch" type="xml">
            <form string="Gold Purity">
                <sheet>
                    <group>
                        <field name="name" placeholder="22K / 18K"/>
                        <field name="percentage"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_gold_purity" model="ir.actions.act_window">
        <field name="name">Gold Purity</field>
        <field name="res_model">gold.purity</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_gold_purity"
        name="Purity"
        parent="stock.menu_stock_inventory_control"
        action="action_gold_purity"
        sequence="10"/>

</odoo>