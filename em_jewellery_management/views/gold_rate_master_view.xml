<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_gold_rate_master_form" model="ir.ui.view">
        <field name="name">gold.rate.master.form</field>
        <field name="model">gold.rate.master</field>
        <field name="arch" type="xml">
            <form string="Gold Rate">
                <header>
                    <button
                        name="action_set_active_rate"
                        type="object"
                        string="Set Active"
                        class="btn-primary"
                        invisible="active"
                    />
                    <field name="active" widget="boolean_toggle"/>
                </header>

                <sheet>
                    <group>
                        <field name="date"/>
                        <field name="rate_per_gram"/>
                        <field name="board_rate"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_gold_rate_master_tree" model="ir.ui.view">
        <field name="name">gold.rate.master.tree</field>
        <field name="model">gold.rate.master</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="rate_per_gram"/>
                <field name="board_rate"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="action_gold_rate_master" model="ir.actions.act_window">
        <field name="name">Gold Rates</field>
        <field name="res_model">gold.rate.master</field>
        <field name="view_mode">tree,form</field>
            <field name="context">{'active_test': False}</field>

    </record>


    <menuitem
        id="menu_gold_rate_master"
        name="Gold Rate Master"
        parent="em_jewellery_management.menu_jewellery_root"
        action="action_gold_rate_master"
    />

</odoo>