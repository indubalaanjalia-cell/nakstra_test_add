<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_scheme_tree" model="ir.ui.view">
        <field name="name">customer.scheme.tree</field>
        <field name="model">customer.scheme</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="total_paid"/>
            </tree>
        </field>
    </record>


    <record id="view_scheme_form" model="ir.ui.view">
        <field name="name">customer.scheme.form</field>
        <field name="model">customer.scheme</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_add_scheme_amount"
                        type="object"
                        string="Add Scheme"
                        class="btn-primary"
                         invisible="state!='draft'"/>
                                        <field name="state" widget="statusbar"/>

<!--                     <button name="action_update_scheme_amount"-->
<!--                            type="object"-->
<!--                            string="Update Scheme Payment"-->
<!--                            class="btn-secondary"-->
<!--                            invisible="state != 'draft'"/>-->

                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="total_paid" readonly="1"/>
                        <field name="partner_id"/>
                        <field name="journal_id"/>

                    </group>
                    <group string="Scheme Payments">
                        <field name="payment_line_ids">
                            <tree editable="bottom">
                                <field name="payment_date"/>
                                <field name="amount"/>
                            </tree>
                        </field>
                    </group>

                </sheet>
            </form>
        </field>
    </record>
    <record id="action_customer_scheme" model="ir.actions.act_window">
        <field name="name">Customer Schemes</field>
        <field name="res_model">customer.scheme</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_customer_scheme" name="Customer Schemes" parent="em_jewellery_management.menu_jewellery_root" action="action_customer_scheme"/>
</odoo>